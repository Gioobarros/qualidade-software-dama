    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                // "--no-reload",  // Impede o Django de reiniciar automaticamente
                "127.0.0.1:8000" // Endereço onde o Django estará escutando
            ],
            "django": true,
            "console": "integratedTerminal"
        }
    ]
}
