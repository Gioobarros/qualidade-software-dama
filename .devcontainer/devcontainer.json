{
  "name": "Django Dev Container",
  
  "dockerComposeFile": [
    "../docker-compose.yml" 
  ],
  
  "service": "web", 

  "workspaceFolder": "/app", 
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python", 
        "ms-python.vscode-pylance", 
        "batisteo.vscode-django"
      ]
    }
  },
    
  "forwardPorts": [8000],

    "postCreateCommand": "python manage.py migrate --noinput"
}