{
  "name": "Django Dev Container",

  "image": "python:3.11-slim",
  
  "workspaceFolder": "/workspace", 
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python", 
        "ms-python.vscode-pylance", 
        "batisteo.vscode-django"
      ]
    }
  },
    
  "forwardPorts": [8000],

    "postCreateCommand": "cd backend/dama && pip install -r requirements.txt && python manage.py migrate --noinput",

    "remoteUser": "root"
}